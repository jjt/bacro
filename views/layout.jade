doctype 5
html
  head
    title= title
    link(rel='stylesheet', href='/css/bacro.css')
    script(src='http://localhost:35729/livereload.js')
  body
    if !suppressHeader
      header.site-header
        .container.r
          a.site-title(href="/") BACRO
          if user
            .auth-status A hoy hoy, 
              = user.email
              br
              a.action-tiny(href='/auth/logout') LOGOUT
          else
            .auth-status
              a.action-tiny(href='/auth/google') LOGIN
    .container
      block content
